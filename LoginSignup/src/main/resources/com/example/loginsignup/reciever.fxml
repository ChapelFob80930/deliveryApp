<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="538.0" prefWidth="844.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.loginsignup.RecieverController">
  <children>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="461.0" prefWidth="844.0" VBox.vgrow="ALWAYS">
      <children>
            <Label fx:id="staticEmailLabel" layoutX="589.0" layoutY="17.0" prefHeight="27.0" prefWidth="79.0" text="Your email:" textFill="#f70505">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <TableView fx:id="ordersTable" layoutX="45.0" layoutY="178.0" prefHeight="142.0" prefWidth="771.0">
               <columns>
                  <TableColumn fx:id="courierNameColumn" prefWidth="132.80001068115234" text="Courier Name" />
                  <TableColumn fx:id="courierPhoneColumn" prefWidth="128.0" text="Courier Phone" />
                  <TableColumn fx:id="receiverAddressColumn" prefWidth="146.4000244140625" text="Receiver's Address" />
                  <TableColumn fx:id="orderPriceColumn" minWidth="0.0" prefWidth="84.79995727539062" text="Order Price" />
                  <TableColumn fx:id="orderStatusColumn" prefWidth="87.199951171875" text="Order Status" />
                  <TableColumn fx:id="descriptionColumn" minWidth="0.0" prefWidth="189.5999633789063" text="Description" />
               </columns>
            </TableView>
            <Button fx:id="placeOrderButton" layoutX="205.0" layoutY="326.0" mnemonicParsing="false" onAction="#handlePlaceOrder" prefHeight="34.0" prefWidth="450.0" text="Place an order">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Label fx:id="currentOrdersLabel" layoutX="406.0" layoutY="120.0" prefHeight="42.0" prefWidth="182.0" text="Your current orders:" textFill="#ec0404">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Button fx:id="logoutButton" layoutX="31.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleLogout" prefHeight="34.0" prefWidth="95.0" text="Log out" />
            <Button fx:id="deliveredButton" disable="true" layoutX="47.0" layoutY="330.0" mnemonicParsing="false" onAction="#handleDelivered" prefHeight="26.0" prefWidth="86.0" text="Delivered" />
            <Button fx:id="cancelButton" disable="true" layoutX="729.0" layoutY="330.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="26.0" prefWidth="86.0" text="Cancel" />
            <Button fx:id="viewHistoryButton" layoutX="231.0" layoutY="467.0" mnemonicParsing="false" onAction="#handleViewHistory" prefHeight="42.0" prefWidth="399.0" text="View orders history">
               <font>
                  <Font size="19.0" />
               </font>
            </Button>
            <Label fx:id="emailLabel" layoutX="663.0" layoutY="17.0" prefHeight="26.0" prefWidth="136.0" text="users email here">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <Button fx:id="viewOrdersButton" layoutX="45.0" layoutY="121.0" mnemonicParsing="false" onAction="#handleViewOrders" prefHeight="40.0" prefWidth="329.0" text="View my current orders/update">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
      </children>
    </AnchorPane>
  </children>
</VBox>
